{
  "form": {
    "title": "Filtros",
    "submitLabel": "Filtrar",
    "submitIcon": "icon-search",
    "controls": [
      {
        "key": "name",
        "type": "input",
        "label": "Que conteña",
        "defaultValue": "",
        "validators": []
      },
      {
        "key": "status",
        "type": "select",
        "label": "Estado",
        "defaultValue": "",
        "validators": [],
        "actions": [
          {
            "label": "CONFIRMADO",
            "key": "active"
          },
          {
            "label": "CANCELADO",
            "key": "canceled"
          },
          {
            "label": "DESHABILITADO",
            "key": "disabled"
          }
        ]
      },
      {
        "key": "startDate",
        "type": "date",
        "label": "Posterior a (dd/mm/aaaa)",
        "defaultValue": "dd/mm/aaaa",
        "validators": [
          {
            "key": "validOptionalDate",
            "errorMessage": "O formato da data non é válido (dd/mm/aaaa)"
          }
        ]
      },
      {
        "key": "endingDate",
        "type": "date",
        "label": "Anterior a (dd/mm/aaaa)",
        "defaultValue": "dd/mm/aaaa",
        "validators": [
          {
            "key": "validOptionalDate",
            "errorMessage": "O formato da data non é válido (dd/mm/aaaa)"
          }
        ]
      }
    ]
  }
}
