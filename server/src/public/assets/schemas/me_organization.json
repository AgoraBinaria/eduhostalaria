{
  "header": {
    "title": "O meu centro",
    "subtitle": "Configurar e aportar información sobre o meu centro.",
    "icon": "icon-edit"
  },
  "tile": {
    "header": {
      "title": "Imaxe destacada",
      "subtitle": "Calendario de ofertas, imaxe do centro, banner publicitario...",
      "icon": "icon-link"
    },
    "actions": [
      {
        "label": "Subir imaxe",
        "key": "upload",
        "disabled": false
      }
    ]
  },
  "form": {
    "title": "Datos do meu centro",
    "submitLabel": "Gardar os datos",
    "controls": [
      {
        "key": "name",
        "type": "text",
        "label": "Nome",
        "defaultValue": "this.organization.name",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Nome é requerido"
          }
        ]
      },
      {
        "key": "slogan",
        "type": "text",
        "label": "O meu centro en cuatro plabras",
        "defaultValue": "this.organization.slogan",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Un slogan do meu centro é requerido"
          }
        ]
      },
      {
        "key": "email",
        "type": "email",
        "label": "Email do administrador",
        "defaultValue": "this.organization.email",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Email é requerido"
          },
          {
            "key": "email",
            "errorMessage": "Formato de email inválido"
          }
        ]
      },
      {
        "key": "phone",
        "type": "text",
        "label": "Teléfono",
        "defaultValue": "this.organization.phone",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Teléfono é requerido"
          }
        ]
      },
      {
        "key": "address",
        "type": "text",
        "label": "Enderezo",
        "defaultValue": "this.organization.address",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Enderezo é requerido"
          }
        ]
      },
      {
        "key": "city",
        "type": "text",
        "label": "Cidade",
        "defaultValue": "this.organization.city",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Cidade é requerido"
          }
        ]
      },
      {
        "key": "url",
        "type": "text",
        "label": "Páxina web",
        "defaultValue": "this.organization.url",
        "validators": []
      },
      {
        "key": "freeSeats",
        "type": "number",
        "label": "Aforo",
        "defaultValue": "this.organization.capacity",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Aforo é requerido"
          }
        ]
      },
      {
        "key": "standardPrice",
        "type": "number",
        "label": "Prezo estándar",
        "defaultValue": "this.organization.standardPrice",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Prezo menú é requerido"
          }
        ]
      },
      {
        "key": "reducedPrice",
        "type": "number",
        "label": "Comunidade educativa",
        "defaultValue": "this.organization.reducedPrice",
        "validators": [
          {
            "key": "required",
            "errorMessage": "A comunidade educativa é requerida"
          }
        ]
      },
      {
        "key": "description",
        "type": "wysiwyg",
        "label": "Descrición",
        "defaultValue": "this.organization.description",
        "validators": []
      },
      {
        "key": "terms",
        "type": "wysiwyg",
        "label": "Términos e condicións do centro",
        "defaultValue": "this.organization.terms",
        "validators": []
      }
    ]
  }
}
